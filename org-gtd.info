          '((name . "Focus Work")
            (type . next-action)
            (priority . (>= B))
            (effort . (> "30min")))))

       (defun my-needs-estimates ()
         "Tasks missing effort or priority - for weekly review."
         (interactive)
         (org-gtd-view-show
          '(((name . "Needs Priority")
             (type . next-action)
             (priority . nil))
            ((name . "Needs Effort")
             (type . next-action)
             (effort . nil))))))


